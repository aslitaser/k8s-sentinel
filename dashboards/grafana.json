{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Prometheus datasource for k8s-sentinel metrics",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "heatmap", "name": "Heatmap", "version": "" },
    { "type": "panel", "id": "bargauge", "name": "Bar gauge", "version": "" },
    { "type": "panel", "id": "table", "name": "Table", "version": "" }
  ],
  "uid": "k8s-sentinel",
  "title": "K8s Sentinel — Admission Webhook",
  "description": "Monitoring dashboard for the k8s-sentinel admission webhook: request rates, latency, policy evaluations, and resource usage.",
  "tags": ["kubernetes", "admission-webhook", "sentinel"],
  "editable": true,
  "graphTooltip": 1,
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "fiscalYearStartMonth": 0,
  "liveNow": false,
  "timezone": "browser",
  "weekStart": "",
  "templating": {
    "list": [
      {
        "name": "namespace",
        "label": "Namespace",
        "description": "Kubernetes namespace to filter on",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(sentinel_admission_requests_total, namespace)",
        "current": { "text": "sentinel", "value": "sentinel" },
        "refresh": 2,
        "sort": 1,
        "includeAll": false,
        "multi": false
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "row",
      "title": "Overview",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "panels": []
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Total Requests (24h)",
      "description": "Total admission requests received in the last 24 hours",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(sentinel_admission_requests_total{namespace=\"$namespace\"}[24h]))",
          "legendFormat": "Total",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Denial Rate",
      "description": "Percentage of admission requests denied (5m rate)",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(sentinel_admission_responses_total{namespace=\"$namespace\", allowed=\"false\"}[5m])) / sum(rate(sentinel_admission_responses_total{namespace=\"$namespace\"}[5m]))",
          "legendFormat": "Denial Rate",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 0.25 }
            ]
          },
          "color": { "mode": "thresholds" },
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Avg Latency (p50)",
      "description": "Median admission request latency over the last 5 minutes",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.50, sum(rate(sentinel_admission_request_duration_seconds_bucket{namespace=\"$namespace\"}[5m])) by (le))",
          "legendFormat": "p50",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.05 },
              { "color": "red", "value": 0.1 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "P99 Latency",
      "description": "99th percentile admission request latency — tail latency indicator",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.99, sum(rate(sentinel_admission_request_duration_seconds_bucket{namespace=\"$namespace\"}[5m])) by (le))",
          "legendFormat": "p99",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.05 },
              { "color": "red", "value": 0.1 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "graphMode": "area",
        "colorMode": "background",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true
      }
    },

    {
      "id": 10,
      "type": "row",
      "title": "Request Rate",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "panels": []
    },
    {
      "id": 11,
      "type": "timeseries",
      "title": "Requests / sec by Operation",
      "description": "Admission request rate broken down by operation (CREATE, UPDATE, etc.)",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(sentinel_admission_requests_total{namespace=\"$namespace\"}[5m])) by (operation)",
          "legendFormat": "{{ operation }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "showPoints": "never",
            "spanNulls": false,
            "axisBorderShow": false,
            "axisCenteredZero": false,
            "axisLabel": "",
            "scaleDistribution": { "type": "linear" },
            "stacking": { "mode": "none", "group": "A" },
            "thresholdsStyle": { "mode": "off" }
          },
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "id": 12,
      "type": "timeseries",
      "title": "Responses — Allowed vs Denied",
      "description": "Admission response rate split by outcome",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(sentinel_admission_responses_total{namespace=\"$namespace\"}[5m])) by (allowed)",
          "legendFormat": "allowed={{ allowed }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "thresholdsStyle": { "mode": "off" }
          },
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "allowed=true" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "allowed=false" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },

    {
      "id": 20,
      "type": "row",
      "title": "Latency",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "panels": []
    },
    {
      "id": 21,
      "type": "heatmap",
      "title": "Request Latency Distribution",
      "description": "Heatmap of admission request latency bucket distribution over time",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(sentinel_admission_request_duration_seconds_bucket{namespace=\"$namespace\"}[5m])) by (le)",
          "legendFormat": "{{ le }}",
          "format": "heatmap"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "scaleDistribution": { "type": "log", "log": 2 }
          }
        },
        "overrides": []
      },
      "options": {
        "calculate": false,
        "yAxis": {
          "unit": "s",
          "axisPlacement": "left"
        },
        "color": {
          "mode": "scheme",
          "scheme": "Spectral",
          "steps": 64,
          "reverse": true
        },
        "cellGap": 1,
        "tooltip": { "show": true, "yHistogram": true },
        "exemplars": { "color": "rgba(255, 0, 255, 0.7)" },
        "filterValues": { "le": 1e-9 },
        "showValue": "never"
      }
    },
    {
      "id": 22,
      "type": "timeseries",
      "title": "Latency Percentiles",
      "description": "p50, p95, and p99 latency over time — yellow threshold at 50ms, red at 100ms",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.50, sum(rate(sentinel_admission_request_duration_seconds_bucket{namespace=\"$namespace\"}[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.95, sum(rate(sentinel_admission_request_duration_seconds_bucket{namespace=\"$namespace\"}[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "refId": "C",
          "expr": "histogram_quantile(0.99, sum(rate(sentinel_admission_request_duration_seconds_bucket{namespace=\"$namespace\"}[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "scheme",
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "thresholdsStyle": { "mode": "dashed" }
          },
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.05 },
              { "color": "red", "value": 0.1 }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "p50" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "p95" },
            "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "p99" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["mean", "max", "lastNotNull"] }
      }
    },

    {
      "id": 30,
      "type": "row",
      "title": "Policies",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "panels": []
    },
    {
      "id": 31,
      "type": "timeseries",
      "title": "Policy Evaluation Rate",
      "description": "Rate of policy evaluations per second, broken down by policy name",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 24 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(sentinel_policy_evaluations_total{namespace=\"$namespace\"}[5m])) by (policy)",
          "legendFormat": "{{ policy }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "scheme",
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "thresholdsStyle": { "mode": "off" }
          },
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["mean"] }
      }
    },
    {
      "id": 32,
      "type": "bargauge",
      "title": "Denials by Policy (1h)",
      "description": "Total denial count per policy over the last hour",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 24 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(sentinel_policy_evaluations_total{namespace=\"$namespace\", result=\"denied\"}[1h])) by (policy)",
          "legendFormat": "{{ policy }}",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          },
          "color": { "mode": "thresholds" },
          "min": 0
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "displayMode": "gradient",
        "valueMode": "color",
        "showUnfilled": true,
        "minVizWidth": 8,
        "minVizHeight": 16,
        "namePlacement": "auto"
      }
    },
    {
      "id": 33,
      "type": "table",
      "title": "Recent Denials",
      "description": "Top denied policy+reason pairs in the last hour. For full denial logs, add a Loki datasource with query: {namespace=\"sentinel\", app=\"k8s-sentinel\"} |= \"denied\" | json",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 24 },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (policy, reason) (increase(sentinel_policy_evaluations_total{namespace=\"$namespace\", result=\"denied\"}[1h])))",
          "legendFormat": "{{ policy }}: {{ reason }}",
          "instant": true,
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Value" },
            "properties": [
              { "id": "displayName", "value": "Count" },
              { "id": "custom.cellOptions", "value": { "type": "color-background", "mode": "gradient" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Time" },
            "properties": [{ "id": "custom.hidden", "value": true }]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [{ "displayName": "Count", "desc": true }],
        "cellHeight": "sm",
        "footer": { "show": false }
      }
    },

    {
      "id": 40,
      "type": "row",
      "title": "Resources",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 32 },
      "panels": []
    },
    {
      "id": 41,
      "type": "timeseries",
      "title": "Pod CPU Usage",
      "description": "CPU cores used by sentinel pods (from cAdvisor metrics)",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 33 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\", container=\"k8s-sentinel\"}[5m])) by (pod)",
          "legendFormat": "{{ pod }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "thresholdsStyle": { "mode": "dashed" }
          },
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.15 },
              { "color": "red", "value": 0.2 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    },
    {
      "id": 42,
      "type": "timeseries",
      "title": "Pod Memory Usage",
      "description": "Working set memory for sentinel pods (from cAdvisor metrics)",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 33 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(container_memory_working_set_bytes{namespace=\"$namespace\", container=\"k8s-sentinel\"}) by (pod)",
          "legendFormat": "{{ pod }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "showPoints": "never",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "thresholdsStyle": { "mode": "dashed" }
          },
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100000000 },
              { "color": "red", "value": 128000000 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["mean", "max"] }
      }
    }
  ]
}
